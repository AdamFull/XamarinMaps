<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinMaps.MainPage">
    
    

    <StackLayout>
        <Entry Text="Enter shop location" x:Name="LocationNameEnter" TextChanged="OnLocationEnterTextChanged" Focused="LocationNameEnter_Focused"></Entry>
        <ListView x:Name="locations_list"  ItemsSource="{Binding Addresses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Address}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <maps:Map x:Name="map" IsShowingUser="true" MapClicked="OnMapClicked">
        </maps:Map>

        <Button Text="Pick start location" x:Name="PickStart" BackgroundColor="Black" TextColor="White" Clicked="PickStartLocation"></Button>
        <Button Text="Pick end location" x:Name="PickEnd" BackgroundColor="Black" TextColor="White" Clicked="PickEndLocation"></Button>
    </StackLayout>

</ContentPage>
